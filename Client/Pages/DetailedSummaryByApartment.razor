@page "/DetailedSummaryByApartment"
<PageTitle>Sistema COB</PageTitle>

@*Pantalla completa*@


<div id="Contenedor" class="min-h-screen bg-[url('/assets/img/imgFondo.png')] z-0 opacity-25 imgfondo fixed inset-0 bg-gray-500 bg-opacity-25 transition-opacity"></div>

@if (apartments != null && activities != null && apartmentDetails == true)
{
    @if (loading == false)
    {
        <div class="h-screen pt-20 pb-12 fixed inset-0 flex flex-col justify-center items-center scaleTab2 scaleTabHD2 scaleTabFullHD2">

            <div class="flex justify-center w-screen rounded-2xl my-2 px-72" style="height: 45rem">
                <div class="mx-1">
                    <div class="w-84">
                        <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#162D4E] text-center py-2">Departamento</h1>
                    </div>
                    <div class="flex justify-center rounded-br-2xl-2xl overflow-y-scroll overflow-x-hidden" style="height: 43rem; direction: rtl;">
                        <div>
                            <div class="grid grid-col-1 gap-1 p-1 w-80">
                                <button @onclick="() => AllApartments()" class="@(allApartments ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                    <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                                </button>
                                @if (apartments != null)
                                {
                                    @foreach (var apartment in apartments)
                                    {
                                        <button @onclick="() => AddIdSelect(apartment.IdApartment, 1)" class="@(_idsAparmentSelect.Contains(apartment.IdApartment) ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                            <h1 class="text-md text-white font-medium leading-6 text-center p-1">@apartment.ApartmentNumber</h1>
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mx-1">
                    <div>
                        <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#162D4E] text-center py-2">Actividad</h1>
                    </div>
                    <div class="flex justify-center rounded-br-2xl-2xl" style="height: 43rem; direction: ltr;">
                        <div>
                            <div class="grid grid-col-1 gap-1 p-1 w-80">
                                @if (activities != null)
                                {
                                    @foreach (var activity in activities)
                                    {
                                        <button @onclick="() => AddIdSelect(activity.IdActivity, 2)" class="@(_idsActivitiesSelect.Contains(activity.IdActivity) ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                            <h1 class="text-md text-white font-medium leading-6 text-center p-1">@activity.ActivityName</h1>
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
                @if (showElements == true)
                {
                    <div class="mx-1">
                        <div>
                            <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#162D4E] text-center py-2">Elemento</h1>
                        </div>
                        <div class="flex justify-center rounded-br-2xl-2xl" style="height: 43rem; direction: ltr;">
                            <div>
                                <div class="grid grid-col-1 gap-1 p-1 w-80">
                                    @if (elements != null)
                                    {
                                        @foreach (var element in elements)
                                        {
                                            <button @onclick="() => AddIdSelect(element.IdElement, 3)" class="@(_idsElementsSelect.Contains(element.IdElement) ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                                <h1 class="text-md text-white font-medium leading-6 text-center p-1">@element.ElementName</h1>
                                            </button>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (showSubElements == true)
                {
                    @if (subElements != null && subElements.Count() > 0)
                    {
                        <div class="mx-1">
                            <div>
                                <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#162D4E] text-center py-2">Sub-Elemento</h1>
                            </div>
                            <div class="flex justify-center rounded-br-2xl-2xl" style="height: 43rem; direction: ltr;">
                                <div>
                                    <div class="grid grid-col-1 gap-1 p-1 w-80">
                                        <button @onclick="() => AllSubElements()" class="@(allSubElements ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                            <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                                        </button>
                                        @foreach (var subElement in subElements)
                                        {
                                            <button @onclick="() => AddIdSelect(subElement.IdSubElement, 4)" class="@(_idsSubElementsSelect.Contains(subElement.IdSubElement) ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                                <h1 class="text-md text-white font-medium leading-6 text-center p-1">@subElement.SubElementName</h1>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="w-full flex justify-end py-3">
                <button @onclick="() => ShowReportAndHideApartment()" class="mx-auto bg-[#B9352E] hover:bg-red-500 p-2 rounded-2xl text-lg text-white font-medium leading-6 border border-stone-400 hover:border-white">Generar Reporte</button>
                @if (alert == true)
                {
                    <div class="bg-red-100 border border-red-400 text-red-700 pl-4 pr-12 py-2 rounded fixed inset-x-90 bottom-20 w-[32]" role="alert">
                        <strong class="font-bold">¡Advertencia!</strong>
                        <span class="block sm:inline">@messageError</span>
                        <span class="absolute top-0 bottom-0 right-0 px-4 py-2">
                            <svg class="fill-current h-6 w-6 text-red-500" role="button" @onclick="() => ShowMessage()" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" /></svg>
                        </span>
                    </div>
                }
            </div>
        </div>

        <a class="fixed inset-x-5 top-24 w-12" href="/ProjectDetails">
            <svg xmlns="http://www.w3.org/2000/svg" width="46" height="46" fill="#55595E" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </a>
    }
    else
    {
        <div class="flex inset-0 fixed justify-center items-center h-screen fixed bg-black opacity-50 transition-opacity">
            <div class="flex inset-0 fixed justify-center items-center h-screen">
                <FluentProgressRing style="width: 102px; height: 102px;">
                    <ChildContent>100%</ChildContent>
                </FluentProgressRing>
            </div>
        </div>
    }
}
