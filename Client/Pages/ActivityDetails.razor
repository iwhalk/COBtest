@page "/ActivityDetails"

<div class="pt-28 pb-12 min-h-screen bg-[url('/assets/img/imgFondo.png')] z-0 opacity-25 imgfondo fixed inset-0 bg-gray-500 bg-opacity-25 transition-opacity"></div>

@if (apartments != null && activities != null && apartmentDetails == true)
{
    if (loading == false)
    {
        <div class="h-screen pt-20 pb-12 fixed inset-0 flex flex-col justify-center items-center scaleTab2 scaleTabHD2 scaleTabFullHD2">
            <div class="flex justify-center w-screen rounded-2xl my-2 px-72" style="height: 45rem">
                <div class="mx-1">
                    <div>
                        <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#162D4E] text-center py-2">Actividad</h1>
                    </div>
                    <div class="flex justify-center rounded-br-2xl-2xl" style="height: 43rem; direction: ltr;">
                        <div>
                            <div class="grid grid-col-1 gap-1 p-1 w-80">
                                @if (activities != null)
                                {
                                    @foreach (var activity in activities)
                                    {
                                        <button @onclick="() => AddIdSelect(activity.IdActivity, 2)" class="@(_idsActivitiesSelect.Contains(activity.IdActivity) ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                            <h1 class="text-md text-white font-medium leading-6 text-center p-1">@activity.ActivityName</h1>
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
                @if (showElements == true)
                {
                    <div class="mx-1">
                        <div>
                            <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#162D4E] text-center py-2">Elemento</h1>
                        </div>
                        <div class="flex justify-center rounded-br-2xl-2xl" style="height: 43rem; direction: ltr;">
                            <div>
                                <div class="grid grid-col-1 gap-1 p-1 w-80">
                                    @if (elements != null)
                                    {
                                        @foreach (var element in elements)
                                        {
                                            <button @onclick="() => AddIdSelect(element.IdElement, 3)" class="@(_idsElementsSelect.Contains(element.IdElement) ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                                <h1 class="text-md text-white font-medium leading-6 text-center p-1">@element.ElementName</h1>
                                            </button>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (showSubElements == true)
                {
                    @if (subElements != null && subElements.Count() > 0)
                    {
                        <div class="mx-1">
                            <div>
                                <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#162D4E] text-center py-2">Sub-Elemento</h1>
                            </div>
                            <div class="flex justify-center rounded-br-2xl-2xl" style="height: 43rem; direction: ltr;">
                                <div>
                                    <div class="grid grid-col-1 gap-1 p-1 w-80">
                                        <button @onclick="() => AllSubElements()" class="@(allSubElements ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                            <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                                        </button>
                                        @foreach (var subElement in subElements)
                                        {
                                            <button @onclick="() => AddIdSelect(subElement.IdSubElement, 4)" class="@(_idsSubElementsSelect.Contains(subElement.IdSubElement) ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                                <h1 class="text-md text-white font-medium leading-6 text-center p-1">@subElement.SubElementName</h1>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                @if (department == true)
                {
                    <div class="mx-1">
                        <div class="w-80">
                            <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#162D4E] text-center py-2">Departamento</h1>
                        </div>
                        <div class="flex justify-center rounded-br-2xl-2xl overflow-y-scroll overflow-x-hidden" style="height: 43rem;">
                            <div>
                                <div class="grid grid-col-1 gap-1 p-1 w-80">
                                    <button @onclick="() => AllApartments()" class="@(allApartments ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                        <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                                    </button>
                                    @foreach (var apartment in apartments)
                                    {
                                        <button @onclick="() => AddIdSelect(apartment.IdApartment, 1)" class="@(_idsAparmentSelect.Contains(apartment.IdApartment) ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                            <h1 class="text-md text-white font-medium leading-6 text-center p-1">@apartment.ApartmentNumber</h1>
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="w-full flex py-3">
                <button @onclick="() => ShowReportAndHideApartment()" class="mx-auto bg-[#B9352E] hover:bg-red-500 w-40 p-2 rounded-2xl text-lg text-white font-medium leading-6 border bg-[#55595E] hover:border-white">Generar Reporte</button>
            </div>
            <a href="/ProjectDetails" class="fixed inset-x-5 top-24 w-12">
                <svg xmlns="http://www.w3.org/2000/svg" width="46" height="46" fill="#55595E" class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                </svg>
            </a>
        </div>
    }
}
else if (buttonReport == true)
{
    @if (loading == false)
    {
        @*Segunda Vista*@
        <div class="h-screen pt-20 pb-12 fixed inset-0 flex flex-col items-center self-start">
            @if (subElementsNulls == false)
            {
                <div class="pt-10">
                    <label class="text-4xl text-white leading-6 text-center bg-[#162D4E] rounded-lg py-2 px-24">Reporte Avance De @activity.ActivityName</label>
                </div>
                @if (greenPercentage != null && redPercentage != null)
                {
                    <div class="flex w-full mt-10 px-16">
                        <div class="flex justify-center w-3/6">
                            <label class="w-80 h-12 text-4xl text-white leading-6 text-center bg-[#162D4E] rounded-lg py-2 m-2">Elemento</label>
                            <label class="w-80 h-12 text-4xl text-white leading-6 text-center bg-[#162D4E] rounded-lg py-2 m-2">Sub-Elemento</label>
                            <label class="w-80 h-12 text-4xl text-white leading-6 text-center bg-[#162D4E] rounded-lg py-2 m-2">Departamento</label>
                        </div>
                        <div class="flex justify-center w-3/6">
                            <label class="w-full text-4xl text-white leading-6 text-center bg-[#162D4E] rounded-lg py-2 my-2">Avance</label>
                            <div class="self-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#254260" class="bi bi-camera-fill ml-2 invisible" viewBox="0 0 16 16">
                                    <path d="M10.5 8.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                                    <path d="M2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2zm.5 2a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm9 2.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0z" />
                                </svg>
                            </div>
                        </div>
                    </div>
                    foreach (var item in apartmentsSelect)
                    {
                        @foreach (var progress in progressReports)
                        {
                            @if (progress.IdApartment == item.IdApartment)
                            {
                                <div class="flex w-full px-16">
                                    <div class="flex justify-center w-3/6">
                                        <label class="w-80 h-8 text-2xl text-white leading-6 text-center bg-[#254260] rounded-lg py-1 m-2">@element.ElementName</label>
                                        <label class="w-80 h-8 text-2xl text-white leading-6 text-center bg-[#254260] rounded-lg py-1 m-2">@subElementsSelect.FirstOrDefault(x => x.IdSubElement == progress.IdSubElement).SubElementName</label>
                                        <label class="w-80 h-8 text-2xl text-white leading-6 text-center bg-[#254260] rounded-lg py-1 m-2">@item.ApartmentNumber</label>
                                    </div>
                                    <div class="flex w-3/6">
                                        @if (progressLogs.FirstOrDefault(x => x.IdProgressReport == progress.IdProgressReport)?.IdProgressLog != null)
                                        {

                                            <div class="flex justify-end text-white w-[100%] bg-[#115D28] h-8 mt-2">1</div>

                                            <div class="self-center">
                                                <button @onclick="() => ChangeShowModal()">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#254260" class="bi bi-camera-fill ml-2" viewBox="0 0 16 16">
                                                        <path d="M10.5 8.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                                                        <path d="M2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2zm.5 2a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm9 2.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0z" />
                                                    </svg>
                                                </button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        }

                    }
                }
                <div class="w-full flex py-3 fixed inset-x-0 bottom-12">
                    <button class="mx-auto bg-[#B9352E] hover:bg-red-500 w-40 p-2 rounded-2xl text-lg text-white font-medium leading-6 border hover:border-white">Descargar</button>
                </div>

                <button @onclick="() => GoBack()" class="fixed inset-x-5 top-24 w-12">
                    <svg xmlns="http://www.w3.org/2000/svg" width="46" height="46" fill="#55595E" class="bi bi-arrow-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                    </svg>
                </button>
                @if (modal)
                {
                    @*Modal Ocultado*@
                    <div class="bg-zinc-300 h-screen w-screen fixed opacity-50"></div>
                    <div class="w-screen h-screen fixed inset-0 flex flex-col justify-center items-center">
                        <div class="w-[40rem] h-[35rem] bg-white border border-black rounded-lg flex flex-col justify-center items-center relative">
                            <div class="absolute top-2 right-2">
                                <button @onclick="() => ChangeShowModal()">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#254260 hover:text-sky-400" class="bi bi-x-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                    </svg>
                                </button>
                            </div>
                            <div>
                                <div class="flex flex-col my-5">
                                    <label class="text-4xl my-4">Observaciones</label>
                                    <input type="text" class="h-32 w-[35rem] border border-black px-2" disabled>
                                </div>
                                <div class="flex flex-col my-5">
                                    <label class="text-4xl my-4">Fotografias</label>
                                    <div class="flex justify-around">
                                        <div class="h-32 w-52 border border-black"></div>
                                        <div class="h-32 w-52 border border-black"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <div class="flex inset-0 fixed justify-center items-center h-screen fixed bg-black opacity-50 transition-opacity">
            <div class="flex inset-0 fixed justify-center items-center h-screen">
                <FluentProgressRing style="width: 102px; height: 102px;">
                    <ChildContent>100%</ChildContent>
                </FluentProgressRing>
            </div>
        </div>
    }
}
else
{
    <div class="flex inset-0 fixed justify-center items-center h-screen fixed bg-black opacity-50 transition-opacity">
        <div class="flex inset-0 fixed justify-center items-center h-screen">
            <FluentProgressRing style="width: 102px; height: 102px;">
                <ChildContent>100%</ChildContent>
            </FluentProgressRing>
        </div>
    </div>
}

