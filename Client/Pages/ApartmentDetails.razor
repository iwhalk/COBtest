                                <button @onclick="() => AddIdAreaSelect(area.IdArea)" class="@(_idsAreaSelect.Contains(area.IdArea) ? "bg-[#55595E]" : "bg-[#9CA2A8]") border border-stone-400">
                                    <h1 class="text-md text-white font-medium leading-6 text-center p-1">@area.AreaName</h1>
                                </button>   
                            }
