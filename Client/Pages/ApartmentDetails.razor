                        <button class="bg-gray-600 border border-stone-400">
                            <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                        </button>
                        @if (_context.Apartment != null)
                        {                    
                            @foreach (var apartment in _context.Apartment)
                            {
                                <button @onclick="() => AddIdAparmentSelect(apartment.IdApartment)" class="@(_idsAparmentSelect.Contains(apartment.IdApartment) ? "bg-[#55595E]" : "bg-[#9CA2A8]") border border-stone-400">
                                    <h1 class="text-md text-white font-medium leading-6 text-center p-1">@apartment.ApartmentNumber</h1>
                                </button>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="mx-1">
            <div>
