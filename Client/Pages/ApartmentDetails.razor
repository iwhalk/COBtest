@page "/ApartmentDetails"

<div id="Contenedor" class="min-h-screen bg-[url('/assets/img/imgFondo.png')] z-0 opacity-25 imgfondo fixed inset-0 bg-gray-500 bg-opacity-25 transition-opacity"></div>
<div class="h-screen pt-20 pb-12 fixed inset-0 flex flex-col justify-center items-center">
    <div class="flex justify-left w-screen rounded-2xl my-2 px-72" style="height: 45rem">
        <div class="mx-1">
            <div class="w-84">
                <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#0B253E] text-center py-2">Departamento</h1>
            </div>
            <div class="flex justify-center rounded-br-2xl-2xl overflow-y-scroll overflow-x-hidden" style="height: 43rem; direction: rtl;">
                <div>
                    <div class="grid grid-col-1 gap-1 p-1 w-80">
                        <button class="bg-gray-600 border border-stone-400">
                            <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                        </button>
                        @if (_context.Apartment != null)
                        {                    
                            @foreach (var apartment in _context.Apartment)
                            {
                                <button @onclick="() => AddIdAparmentSelect(apartment.IdApartment)" class="@(_idsAparmentSelect.Contains(apartment.IdApartment) ? "bg-[#55595E]" : "bg-[#9CA2A8]") border border-stone-400">
                                    <h1 class="text-md text-white font-medium leading-6 text-center p-1">@apartment.ApartmentNumber</h1>
                                </button>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="mx-1">
            <div>
                <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#0B253E] text-center py-2">Actividad</h1>
            </div>
            <div class="flex justify-center rounded-br-2xl-2xl" style="height: 43rem; direction: ltr;">
                <div>
                    <div class="grid grid-col-1 gap-1 p-1 w-80">
                        <button class="bg-gray-600 border border-stone-400">
                            <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                        </button>
                        @if (_context.Activity != null)
                        {                    
                            @foreach (var activity in _context.Activity)
                            {
                                <button @onclick="() => AddIdActivitySelect(activity.IdActivity)" class="@(_idsActivitySelect.Contains(activity.IdActivity) ? "bg-[#55595E]" : "bg-[#9CA2A8]") border border-stone-400">
                                    <h1 class="text-md text-white font-medium leading-6 text-center p-1">@activity.ActivityName</h1>
                                </button>   
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="mx-1">
            <div>
                <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#0B253E] text-center py-2">Elemento</h1>
            </div>
            <div class="flex justify-center rounded-br-2xl-2xl overflow-y-scroll overflow-x-hidden" style="height: 43rem; direction: rtl;">
                <div>
                    <div class="grid grid-col-1 gap-1 p-1 w-80">
                    @if (_context.Element != null)
                    {                      
                        <button class="bg-gray-600 border border-stone-400">
                            <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                        </button>
                                     
                        @foreach (var element in _context.Element)
                        {
                            <button @onclick="() => AddIdElement(element.IdElement)" class="@(_idsActivitySelect.Contains(element.IdElement) ? "bg-[#55595E]" : "bg-[#9CA2A8]") border border-stone-400">
                                <h1 class="text-md text-white font-medium leading-6 text-center p-1">@element.ElementName</h1>
                            </button>
                        }
                    }
                    </div>
                </div>
            </div>
        </div>
        <div class="mx-1">
            <div>
                <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#0B253E] text-center py-2">Sub-Elemento</h1>
            </div>
            <div class="flex justify-center rounded-br-2xl-2xl" style="height: 43rem; direction: ltr;">
                <div>
                    <div class="grid grid-col-1 gap-1 p-1 w-80">
                        @if (_context.SubElement != null)
                        {
                            <button class="bg-gray-600 border border-stone-400">
                                <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                            </button>                                       
                            @foreach (var subElement in _context.SubElement)
                            {
                                <button @onclick="() => AddIdSubElement(subElement.IdSubElement)" class="@(_idsActivitySelect.Contains(subElement.IdSubElement) ? "bg-[#55595E]" : "bg-[#9CA2A8]") border border-stone-400">
                                    <h1 class="text-md text-white font-medium leading-6 text-center p-1">@subElement.SubElementName</h1>
                                </button>      
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="w-full flex py-3">
        <button class="mx-auto bg-[#B9352E] hover:bg-red-500 p-2 rounded-2xl text-lg text-white font-medium leading-6 border border-stone-400 hover:border-white">Generar Reporte</button>
    </div>
