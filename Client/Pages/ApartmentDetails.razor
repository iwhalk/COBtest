@page "/ApartmentDetails"

<div id="Contenedor" class="min-h-screen bg-[url('/assets/img/imgFondo.png')] z-0 opacity-25 imgfondo fixed inset-0 bg-gray-500 bg-opacity-25 transition-opacity"></div>
<div class="h-screen pt-20 pb-12 fixed inset-0 flex flex-col justify-center items-center">
    <div class="flex justify-left w-screen rounded-2xl my-2 px-72" style="height: 45rem">
        <div class="mx-1">
            <div class="w-84">
                <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#0B253E] text-center py-2">Departamento</h1>
            </div>
            <div class="flex justify-center rounded-br-2xl-2xl overflow-y-scroll overflow-x-hidden" style="height: 43rem; direction: rtl;">
