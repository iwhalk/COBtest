@page "/DetallesPorDepartamento"

@*Pantalla completa*@


<div id="Contenedor" class="min-h-screen bg-[url('/assets/img/imgFondo.png')] z-0 opacity-25 imgfondo fixed inset-0 bg-gray-500 bg-opacity-25 transition-opacity"></div>

@if (apartments != null && activities != null && apartmentDetails == true)
{
    <div class="h-screen pt-20 pb-12 fixed inset-0 flex flex-col justify-center items-center">
        <div class="flex justify-left w-screen rounded-2xl my-2 px-72" style="height: 45rem">
            <div class="mx-1">
                <div class="w-84">
                    <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#162D4E] text-center py-2">Departamento</h1>
                </div>
                <div class="flex justify-center rounded-br-2xl-2xl overflow-y-scroll overflow-x-hidden" style="height: 43rem; direction: rtl;">
                    <div>
                        <div class="grid grid-col-1 gap-1 p-1 w-80">
                            <button class="bg-[#55595E]">
                                <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                            </button>
                            @if (apartments != null)
                            {
                                @foreach (var apartment in apartments)
                                {
                                    <button @onclick="() => AddIdSelect(apartment.IdApartment, 1)" class="@(_idsAparmentSelect.Contains(apartment.IdApartment) ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                        <h1 class="text-md text-white font-medium leading-6 text-center p-1">@apartment.ApartmentNumber</h1>
                                    </button>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="mx-1">
                <div>
                    <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#162D4E] text-center py-2">Actividad</h1>
                </div>
                <div class="flex justify-center rounded-br-2xl-2xl" style="height: 43rem; direction: ltr;">
                    <div>
                        <div class="grid grid-col-1 gap-1 p-1 w-80">
                            <button class="bg-[#55595E]">
                                <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                            </button>
                            @if (activities != null)
                            {
                                @foreach (var activity in activities)
                                {
                                    <button @onclick="() => AddIdSelect(activity.IdActivity, 2)" class="@(_idsActivitiesSelect.Contains(activity.IdActivity) ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                        <h1 class="text-md text-white font-medium leading-6 text-center p-1">@activity.ActivityName</h1>
                                    </button>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="mx-1">
                <div>
                    <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#162D4E] text-center py-2">Elemento</h1>
                </div>
                <div class="flex justify-center rounded-br-2xl-2xl" style="height: 43rem; direction: ltr;">
                    <div>
                        <div class="grid grid-col-1 gap-1 p-1 w-80">
                            <button class="bg-[#55595E]">
                                <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                            </button>
                            @if (elements != null)
                            {
                                @foreach (var element in elements)
                                {
                                    <button @onclick="() => AddIdSelect(element.IdElement, 3)" class="@(_idsElementsSelect.Contains(element.IdElement) ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                        <h1 class="text-md text-white font-medium leading-6 text-center p-1">@element.ElementName</h1>
                                    </button>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="mx-1">
                <div>
                    <h1 class="rounded-xl text-xl text-white font-medium leading-6 bg-[#162D4E] text-center py-2">Sub-Elemento</h1>
                </div>
                <div class="flex justify-center rounded-br-2xl-2xl" style="height: 43rem; direction: ltr;">
                    <div>
                        <div class="grid grid-col-1 gap-1 p-1 w-80">
                            <button class="bg-[#55595E]">
                                <h1 class="text-md text-white font-medium leading-6 text-center p-1">TODOS</h1>
                            </button>
                            @if (subElements != null)
                            {
                                @foreach (var subElement in subElements)
                                {
                                    <button @onclick="() => AddIdSelect(subElement.IdSubElement, 4)" class="@(_idsSubElementsSelect.Contains(subElement.IdSubElement) ? "bg-[#9CA2A8]" : "bg-[#55595E]")">
                                        <h1 class="text-md text-white font-medium leading-6 text-center p-1">@subElement.SubElementName</h1>
                                    </button>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="w-full flex py-3">
            <button @onclick="() => ShowReportAndHideApartment()" class="mx-auto bg-[#B9352E] hover:bg-red-500 p-2 rounded-2xl text-lg text-white font-medium leading-6 border border-stone-400 hover:border-white">Generar Reporte</button>
            @if (alert == true)
            {
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <strong class="font-bold">¡Advertencia!</strong>
                    <span class="block sm:inline">@menssageError</span>
                    <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
                        <svg class="fill-current h-6 w-6 text-red-500" role="button" @onclick="() => ShowMenssage()" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" /></svg>
                    </span>
                </div>
            }
        </div>
    </div>
}
else if (buttonReport == true)
{
    <div class="h-screen pt-20 pb-12 fixed inset-0 flex flex-col items-center self-start">
        <div class="pt-10">
            <label class="text-4xl text-white leading-6 text-center bg-[#162D4E] rounded-lg py-3 px-24">Reporte Avance</label>
        </div>
        @if (subElementsNulls == false)
        {
            <div class="flex w-full mt-10 px-16">
                <div class="flex justify-center w-3/6">
                    <label class="w-64 h-12 text-4xl text-white leading-6 text-center bg-[#162D4E] rounded-lg py-2 m-2">Actividad</label>
                    <label class="w-64 h-12 text-4xl text-white leading-6 text-center bg-[#162D4E] rounded-lg py-2 m-2">Elemento</label>
                    <label class="w-64 h-12 text-4xl text-white leading-6 text-center bg-[#162D4E] rounded-lg py-2 m-2">Sub-Elemento</label>
                </div>
                <div class="flex justify-center w-3/6">
                    <label class="w-full text-4xl text-white leading-6 text-center bg-[#162D4E] rounded-lg py-3 my-2">Avance</label>
                    <div class="self-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#254260" class="bi bi-camera-fill ml-2 invisible" viewBox="0 0 16 16">
                            <path d="M10.5 8.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                            <path d="M2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2zm.5 2a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm9 2.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0z" />
                        </svg>
                    </div>
                </div>
            </div>
            @foreach (var item in subElementsAux)
            {
                <div class="flex w-full mt-2 px-16">
                    <div class="flex justify-center w-3/6">
                        <label class="w-64 h-8 text-2xl text-white leading-6 text-center bg-[#254260] py-1 m-2">@activity.ActivityName</label>
                        <label class="w-64 h-8 text-2xl text-white leading-6 text-center bg-[#254260] py-1 m-2">@element.ElementName</label>
                        <label class="w-64 h-8 text-2xl text-white leading-6 text-center bg-[#254260] py-1 m-2">@item.SubElementName</label>
                    </div>
                    <div class="flex w-3/6">
                        <div class="flex justify-end text-white w-[100%] bg-[#115D28] h-8 mt-2">1</div>
                        <div class="self-center">
                            <button @onclick="() => ChangeShowModal()">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#254260" class="bi bi-camera-fill ml-2" viewBox="0 0 16 16">
                                    <path d="M10.5 8.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                                    <path d="M2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2zm.5 2a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm9 2.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            }

        }
        else
        {
            <div class="flex w-full mt-10 px-16">
                <div class="flex justify-center w-3/6">
                    <label class="w-64 h-12 text-4xl text-white leading-6 text-center bg-[#162D4E] py-2 m-2">Actividad</label>
                    <label class="w-64 h-12 text-4xl text-white leading-6 text-center bg-[#162D4E] py-2 m-2">Elemento</label>
                </div>
                <div class="flex justify-center w-3/6">
                    <label class="w-full text-4xl text-white leading-6 text-center bg-[#162D4E] rounded-lg py-3 my-2">Avance</label>
                    <div class="self-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#254260" class="bi bi-camera-fill ml-2 invisible" viewBox="0 0 16 16">
                            <path d="M10.5 8.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                            <path d="M2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2zm.5 2a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm9 2.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0z" />
                        </svg>
                    </div>
                </div>
            </div>
            <div class="flex w-full mt-2 px-16">
                <div class="flex justify-center w-3/6">
                    <label class="w-64 h-8 text-2xl text-white leading-6 text-center bg-[#254260] rounded-lg py-1 m-2">@activity.ActivityName</label>
                    <label class="w-64 h-8 text-2xl text-white leading-6 text-center bg-[#254260] rounded-lg py-1 m-2">@element.ElementName</label>
                </div>
                <div class="flex w-3/6">
                    <div class="flex justify-end text-white w-[100%] bg-[#115D28] h-8 mt-2">1</div>
                    <div class="self-center">
                        <button @onclick="() => ChangeShowModal()">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#254260" class="bi bi-camera-fill ml-2" viewBox="0 0 16 16">
                                <path d="M10.5 8.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                                <path d="M2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2zm.5 2a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm9 2.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0z" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        }
        <div class="w-full flex py-3 fixed inset-x-0 bottom-12">
            <button @onclick="() => ChangeView()" class="mx-auto bg-[#B9352E] hover:bg-#CB3030-500 w-32 p-2 rounded-2xl text-lg text-white font-medium leading-6 border border-stone-400 hover:border-white">Guardar</button>
        </div>
        @if (showModal)
        {
            <div class="bg-zinc-300 h-screen w-screen fixed opacity-50"></div>
            <div class="w-screen h-screen fixed inset-0 flex flex-col justify-center items-center">
                <div class="w-[40rem] h-[35rem] bg-white border border-black rounded-lg flex flex-col justify-center items-center relative">
                    <div class="absolute top-2 right-2">
                        <button @onclick="() => ChangeShowModal()">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                            </svg>
                        </button>
                    </div>
                    <div class="flex flex-col justify-center items-center relative">
                        <div class="flex flex-col w-full">
                            <label class="text-4xl my-4">Observaciones</label>
                            <input type="text" class="h-32 w-[35rem] border border-black px-2" disabled>
                        </div>
                        <div class="flex flex-col w-full">
                            <label class="text-4xl my-4">Fotografias</label>
                            <div class="flex justify-around">
                                <div class="h-32 w-52 border border-black"></div>
                                <div class="h-32 w-52 border border-black"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <svg class="loading-progress">
        <circle r="40%" cx="50%" cy="50%" />
        <circle r="40%" cx="50%" cy="50%" />
    </svg>
    <div class="loading-progress-text"></div>
}

