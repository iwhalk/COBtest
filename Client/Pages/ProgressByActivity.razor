@page "/ProgressForActivity"
<PageTitle>Sistema COB</PageTitle>

<div id="Contenedor" class="min-h-screen bg-[url('/assets/img/imgFondo.png')] z-0 opacity-25 imgfondo fixed inset-0 bg-gray-500 bg-opacity-25 transition-opacity"></div>
@if (_context.Activity is not null)
{
    <div class="mt-28 mb-12 fixed inset-0 flex flex-col justify-center items-center overflow-y-scroll">
        <div class="border border-stone-300 rounded-2xl md:mx-3">
            <div class="w-full inline-flex">
                <div class="w-1/6 md:w-2/6 md:p-1 p-2">
                    <h1 class="rounded-br-lg rounded-tl-2xl text-xs md:text-xl text-white font-medium leading-6 bg-[#162D4E] text-center p-2 md:p-2 xl:p-5">Actividad</h1>
                </div>
                <div class="w-5/6 md:w-4/6 p-0.5 md:p-1 p-2">
                    <h1 class="rounded-br-lg rounded-tl-2xl text-xs md:text-xl text-white font-medium leading-6 bg-[#162D4E] text-center p-2 md:p-2 xl:p-5">Avance General</h1>
                </div>
            </div>
            <div class="grid grid-cols-1">
                <div class="overflow-y-auto h-[29rem] xl:h-[31rem]">
                    <div class="w-full inline-flex">
                        <div class="w-1/6 md:w-2/6 p-0.5">
                            <div class="@(_isFullActivity ? "bg-[#9CA2A8]" : "bg-[#55595E]") border border-stone-40 md:h-10 xl:h-12">
                                <button @onclick="() => FullActivity()" class="w-full">
                                    <p class="text-lg text-white font-medium leading-6 text-center md:p-1 xl:p-3">Todos</p>
                                </button>
                            </div>
                        </div>
                        <div class="w-5/6 md:w-4/6 inline-flex p-0.5"></div>
                    </div>

                    @foreach (var activity in _context.Activity)
                    {
                        <div class="w-full inline-flex">
                            <div class="w-1/6 md:w-2/6 p-0.5">
                                <div class="@(_idsActivitySelect.ContainsKey(activity.IdActivity) && _isFullActivity == false ? "bg-[#9CA2A8]" : "bg-[#55595E]") border border-stone-400 h-8 xl:px-3 py-1">
                                    <button @onclick="() => AddIdActivitySelect(activity.IdActivity)" class="w-full">
                                        <p class="text-xs md:text-sm xl:text-lg text-white font-medium leading-6 text-center">@activity.ActivityName</p>
                                    </button>
                                </div>
                            </div>
                            @if (_idsActivitySelect.ContainsKey(activity.IdActivity))
                            {
                                <div class="w-5/6 md:w-4/6 inline-flex p-0.5">
                                    @if (_idsActivitySelect[activity.IdActivity].Item1 > 0)
                                    {
                                        <div class="bg-[#115D28] z-10 h-8 md:text-sm xl:text-lg text-white text-end w-[@Convert.ToInt32(_idsActivitySelect[activity.IdActivity].Item1)%] p-1">@_idsActivitySelect[activity.IdActivity].Item1.ToString("0.##")%</div>
                                    }                                    
                                    @if (_idsActivitySelect[activity.IdActivity].Item1 < 100)
                                    {
                                        <div class="bg-[#CB3030] h-8 md:text-sm xl:text-lg text-white text-end w-[@Convert.ToInt32(_idsActivitySelect[activity.IdActivity].Item2)%] p-1">@_idsActivitySelect[activity.IdActivity].Item2.ToString("0.##")%</div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
            <div class="w-full flex py-8">
                <button @onclick="() => GeneratePDfPorgressaprment()" class="mx-auto bg-[#B9352E] hover:bg-red-500 w-32 p-1 md:p-2 rounded-2xl text-base md:text-lg text-white font-medium leading-6 border border-stone-400 hover:border-white">Descargar</button>
            </div>
        </div>
    </div>
    @if (_isLoadingProcess)
    {
        <div class="flex inset-0 fixed justify-center items-center h-screen fixed bg-black opacity-50 transition-opacity"></div>
        <div class="flex inset-0 fixed justify-center items-center h-screen">
            <FluentProgressRing style="width: 102px; height: 102px;">
                <ChildContent>100%</ChildContent>
            </FluentProgressRing>
        </div>
    }
    <button @onclick="() => BackPage()" class="fixed inset-x-1 top-20 w-12">
        <svg xmlns="http://www.w3.org/2000/svg" width="46" height="46" fill="#55595E" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
        </svg>
    </button>
}
else
{
    <div class="flex inset-0 fixed justify-center items-center h-screen fixed bg-black opacity-50 transition-opacity">
        <FluentProgressRing style="width: 102px; height: 102px;">
            <ChildContent>100%</ChildContent>
        </FluentProgressRing>
    </div>
}
<Navbar></Navbar>
<Footer></Footer>
<label class="fixed top-0 mx-64 left-0 right-0 text-base md:text-xl lg:text-2xl xl:text-4xl text-white leading-6 text-center py-2 mt-2">Resumen Avance Por Actividad</label>
