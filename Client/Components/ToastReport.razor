@if (string.IsNullOrWhiteSpace(Title))
{
    <div class="text-white p-4 bg-warning rounded text-center fixed top-24 right-6">
        <strong class="font-bold">¡Sin datos!</strong>
        <p>
            <span class="block sm:inline">No se tiene avance dentro del periodo seleccionado</span>
        </p>
    </div>
}

@code {
    [CascadingParameter] private BlazoredToast ToastInstance { get; set; } = default!;

    [Parameter] public string? Title { get; set; }
    [Parameter] public string? ToastParam { get; set; }
}
