@if (ShowModal)
{
    <div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                <div class="relative mx-auto md:max-w-2xl sm:max-w-sm bg-white h-64 rounded-lg border border-grey-300 drop-shadow-lg border-2">
                    <div class="static flex justify-center pt-8">
                        <h1 class="text-center text-gray-400 text-xl">Envio Exitoso</h1>
                    </div>
                    <div class="static flex justify-center pt-8 w-96">
                        <h1 class="text-center text-gray-400 text-xl">El Acta @NumberReceptionCertificate se envió por correo</h1>
                    </div>
                    <div class="static flex justify-center pt-8">
                        <button onclick="RedirectToHome" class="py-2  w-48 border rounded-lg text-white text-xl shadow-xl" style="background-color: #2B286F;">Ok</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
