@if (ShowModal)
{
    <div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                <div class="mx-auto bg-white md:max-w-2xl sm:max-w-sm my-auto rounded-lg border border-grey-300 drop-shadow-lg border-2">
                    <div class="relative">
                        <button @onclick="@(() => CloseModalLessor.InvokeAsync())" type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-red-600 rounded-full border border-2 ">
                            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                        </button>
                    </div>
                    <div class="text-center text-gray-400 text-xl py-10">Lista de Arrendadores</div>
                    <div class="overflow-y-auto h-48 mx-auto text-center px-3">
                        <table class="lg:w-full overflow justify-center text-sm">
                            <tr class="bg-[#2B286F] text-white text-sm h-10">
                                <th></th>
                                <th>Nombre</th>
                                <th>Direccion</th>
                                <th>RFC</th>
                                <th class="ocultar">Email</th>
                                <th class="ocultar">Telefono</th>
                            </tr>
                            @foreach (var lessor in Lessors)
                            {
                                <tr>                                    
                                    <td class="p-2"><input disabled="@Convert.ToBoolean((@DisableCheckBox && !(@lessor.IdLessor == @IdLessor)))" @onchange="eventArgs => { CheckboxLessorSelect(lessor.IdLessor, eventArgs.Value); }" type="checkbox" /></td>
                                    <td class="p-2">@lessor.Name</td>
                                    <td class="p-2">@lessor.Street</td>
                                    <td class="p-2">@lessor.Rfc</td>
                                    <td class="p-2 ocultar">@lessor.EmailAddress</td>
                                    <td class="p-2 ocultar">@lessor.PhoneNumber</td>
                                </tr>
                            }                               
                        </table>
                    </div>
                    <div class="my-4">
                        <button @onclick="@(() => SendIdLessor.InvokeAsync(IdLessor))" disabled="@Convert.ToBoolean(!@DisableCheckBox)" class="py-2 w-48 border rounded-lg text-white text-xl shadow-xl" style="background-color: #2B286F;">Agregar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}