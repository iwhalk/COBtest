
<div id="TablaInventario" class="relative w-56 text-center mt-5 mr-2 mb-5 m-l5 rounded-lg" style="background-color: #6AA7B7;">
    <div class="rounded-lg flex flex-col">
        <label class="py-2 bg-slate-100 text-blue-900 border-1 border-blue-800 rounded-t-lg">@TypeList</label>
        @*<button class="py-2 text-white border" style="background-color: #2B286F;">Entrada</button>*@
        @foreach (var service in Services)
        {
            @if (service.IdService != 13 && service.IdService != 14)
            {
                <button @onclick="@(() => OnClicked(service.IdService))" style="@((SelectedService == service.IdService) ? "background-color: #2B286F;" : "")" class="py-2 text-white border-1 border-blue-800 hover:bg-violet-600 active:bg-violet-700 focus:outline-none">@service?.ServiceName</button>
            }
        }
        <br>
    </div>
    <div class="absolute bottom-0 left-0 right-0 justify-center mt-4">
        <div class="flex flex-col">
            @if (TypeList == "Habitaciones")
            {
                <button @onclick="@(() => OpenModalGauges.InvokeAsync())" class="mt-40 py-2 text-white border-1 border-blue-800">Medidores</button>
                <button @onclick="@(() => OpenModalKeys.InvokeAsync())" class="py-2 text-white border-1 border-blue-800">Llaves</button>
            }
        </div>
        <div>
            <button @onclick="@(() => OnClick.InvokeAsync())">
                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="white" class="bi bi-plus" viewBox="0 0 16 16">
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg>
            </button>
            <button @onclick="@(() => OnMinusClick.InvokeAsync(SelectedService))">
                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="white" class="bi bi-dash" viewBox="0 0 16 16">
                    <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z" />
                </svg>
            </button>
        </div>
    </div>
</div>  