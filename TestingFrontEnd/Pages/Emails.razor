@page "/Emails"
@attribute [Authorize]
<PageTitle>Correos</PageTitle>

<body class="flex flex-column min-h-screen bg-[url('/assets/img/fondocasa.png')] imgfondo">
    <div id="ContenedorInventario" class="flex">
        <div id="ListActas" class="flex ml-4">
        <LeftListActas></LeftListActas>
        </div>
        <div id="ContenedorElementos" class="my-12 relative border-1 border-black rounded-lg p-2 mr-6 w-full">

            <div class="flex justify-center">
                <label for="" class="text-3xl text-blue-900 font-semibold my-16">Correos Electronicos</label>
            </div>
            <div class="flex justify-center">
                
                <div id="InputsEmail" class="flex flex-col">
                    <span class="flex my-4"><input type="checkbox" class="w-8"><label class="pl-2 text-2xl text-blue-900 w-32">Arrendatario</label><input type="email" name="" id="" placeholder="eestrada@yahoo.com" class="w-72 ml-24 px-2 rounded-lg border-2 border-gray-300"></span>
                    <span class="flex my-4"><input type="checkbox" class="w-8"><label class="pl-2 text-2xl text-blue-900 w-32">Arrendador</label><input type="email" name="" id="" placeholder="emolinaa@yahoo.com" class="w-72 ml-24 px-2 rounded-lg border-2 border-gray-300"></span>
                    <span class="flex my-4"><input type="checkbox" class="w-8"><label class="pl-2 text-2xl text-blue-900 w-32">Agencia</label><input type="text" name="" id="" class="w-72 ml-24 px-2 rounded-lg border-2 border-gray-300"></span>
                    <span class="flex my-4"><input type="checkbox" class="w-8"><label class="pl-2 text-2xl text-blue-900 w-32">Agente</label><input type="text" name="" id="" class="w-72 ml-24 px-2 rounded-lg border-2 border-gray-300"></span>
                    <span class="flex my-4"><input type="checkbox" class="w-8"><label class="pl-2 text-2xl text-blue-900 w-32">Otro</label><input type="text" name="" id="" class="w-72 ml-24 px-2 rounded-lg border-2 border-gray-300"></span>
                </div>

            </div>
            

        </div>
    </div>
    <div id="Botones" class="flex justify-center -my-5">
        <button class="py-2 my-4 w-48 border rounded-lg text-white text-xl shadow-xl" style="background-color: #2B286F;">Previsualizar</button>
        <button class="py-2 my-4 w-48 border rounded-lg text-white text-xl shadow-xl" style="background-color: #2B286F;">Guardar</button>
        <button class="py-2 my-4 w-48 border rounded-lg text-white text-xl shadow-xl" style="background-color: #2B286F;">Enviar</button>
    </div>
    
</body>

<style>
    .imgfondo {
    position: relative;
    min-height: 90.2vh;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}
</style>