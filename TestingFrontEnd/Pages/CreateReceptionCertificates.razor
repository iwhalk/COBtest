@page "/ReceptionCertificates/Create"
@attribute [Authorize]
<Navbar></Navbar>
<body>    
    <div id="ContenedorHome" class="bg-[url('/assets/img/fondocasa.png')] imgfondo">       
        <div class="mx-auto max-w-screen-xl bg-transparent pt-2 md:p-5 sm:p-1">
            <EditForm Model="@NewCreateReceptionCertificate" OnSubmit="HandlePostCreateCertificates">
            <DataAnnotationsValidator />
            <div class="bg-[#2B286F] mx-auto h-32 md:m-3 sm:m-1 text-center text-sm-center md:text-md text-white">
                <h1 class="text-xl mb-2">Informacion general @MyProperty</h1>
        
                <div class="flex inline grid grid-cols-2  place-items-center">
                    <div>
                        <div class="flex inline mb-3">
                            <label class="w-52 text-left">Fecha y Hora de Realizacion</label>
                            <div>
                                <InputDate @bind-Value="NewCreateReceptionCertificate.CreationDate" class="w-44 ml-2 rounded-lg text-black" />
                                <div class="text-xs"><ValidationMessage class="text-xs" For="@(() => NewCreateReceptionCertificate.CreationDate)" /></div>
                            </div>
                        </div>
                        <div class="flex inline">
                            <label class="w-52 text-left">Realizado por</label>
                             <input class="w-52 ml-2 rounded-lg text-black" type="text" />
                        </div>
                    </div>
                    <div>
                        <div class="flex inline">
                            <label class="w-24">No Contrato</label>
                            <input class="w-52 ml-2 rounded-lg text-black" type="text" />
                        </div>
                    </div>
                </div>                
            </div>
            <FormLessor @ref="formLessor" OpenModalLessor="ChangeOpenModalLessor" CurrentLessor="CurrentLessor" IsFormLessorExit="CurrentLessor.IdLessor == 0 ? false : true"></FormLessor>
            <FormTenant @ref="formTenant" OpenModalTenant="ChangeOpenModalTenant" CurrentTenant="CurrentTenant" IsFormTenantExit="CurrentTenant.IdTenant == 0 ? false : true"></FormTenant>
            <FormProperty @ref="formProperty" OpenModalProperty="ChangeOpenModalProperty" CurrentProperty="CurrentProperty" IsFormPropertyExit="CurrentProperty.IdProperty == 0 ? false : true"></FormProperty>

            <div class="flex inline grid grid-cols-1  place-items-center">
                @*<a href="/ReceptionCertificates/Inventory"><button class="bg-[#2B286F] text-white mt-10 rounded-lg h-10 w-20">Siguiente</button></a>*@         
                <button type="submit" class="bg-[#2B286F] text-white mt-10 rounded-lg h-10 w-20">Siguiente</button>
            </div>
            </EditForm>
            @if (ShowModalLessor)
            {
                <ModalLessor Lessors="lessors" SendIdLessor="SetLessorForm" CloseModalLessor="ChangeOpenModalLessor" ShowModal="ShowModalLessor"></ModalLessor>
            }      
            @if(ShowModalTenant)
            {
                <ModalTenant Tenants="tenants" SendIdTenant="SetTenantForm" CloseModalTenant="ChangeOpenModalTenant" ShowModal="ShowModalTenant"></ModalTenant>
            }
            @if(ShowModalProperty)
            {
                <ModalProperty Propertys="properties" SendIdProperty="SetPropertyForm" CloseModalProperty="ChangeOpenModalProperty" ShowModal="ShowModalProperty"></ModalProperty>
            }
        </div>
    </div>
</body>
<Footer></Footer>